generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid        String @id 
  userName   String
  profilePic String
  mocks      MockInterview[]
}

model MockInterview {
  id           String  @id @default(cuid()) 
  jsonMockResp Json
  userId       String  
  user         User @relation(fields: [userId], references: [uid], onDelete: Cascade)

  @@map("mockInterview")
}
